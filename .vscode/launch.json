// https://dev.to/t4inha/how-to-use-nodemon-with-vscode-debugger-2bpa
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "nodemon",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"program": "${workspaceFolder}/server.mjs",
			"request": "launch",
			"restart": true,
			// "runtimeExecutable": "nodemon", /* ORIGINAL VALUE */
			"runtimeExecutable": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js",
			"type": "node"
		}
	]
}